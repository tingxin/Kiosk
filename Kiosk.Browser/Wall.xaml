<UserControl x:Class="Kiosk.Browser.Wall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:surface="http://schemas.microsoft.com/surface/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="gdRoot">

        <surface:SurfaceButton x:Name="btnBack" Grid.Row="1" Height="85" Width="90" VerticalAlignment="Bottom" Panel.ZIndex="2" Background="#00000000" Visibility="Collapsed">
            <Image Source="Assets/exit_on.png" Height="70" Width="70"></Image>
        </surface:SurfaceButton>
        <Grid x:Name="gdSnapShot" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsHitTestVisible="False" Panel.ZIndex="5"></Grid>
    </Grid>
</UserControl>
